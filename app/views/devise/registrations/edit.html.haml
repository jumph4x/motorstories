.edit.registration
  .row
    .large-4.large-centered.small-12.columns
      %h1 Update your account

      =form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f|
        =devise_error_messages!

        %div
          =f.label :current_password
          =f.password_field :current_password
          %i (we need your current password to confirm your changes)
        %div
          =f.label :name
          =f.text_field :name, :autofocus => true
        %div
          =f.label :username
          =f.text_field :username
        %div
          =f.label :email
          =f.email_field :email
        -if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div Currently waiting confirmation for: #{resource.unconfirmed_email}
        %div
          =f.label :password, 'New password'
          =f.password_field :password, :autocomplete => 'off'
          %i (leave blank unless you're changing it)
        %div
          =f.label :password_confirmation, 'New password confirmation'
          =f.password_field :password_confirmation

        .form-actions= f.submit "Update", class: 'button'
      
      %h2 Delete my account!
      %p
        Unhappy? We're sorry about that.
        .form-actions
          = button_to "Cancel your account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button alert'
